{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    // FIX 1: Corrected "DOMIterable" to "DOM.Iterable"
    "lib": ["ES2020", "DOM", "DOM.Iterable"], 
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    // FIX 3: Temporarily disable unused variable checks to resolve TS6133 errors
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  // FIX 4: Added vite-env.d.ts to recognize the declaration file for import.meta.env
  "include": ["src", "vite-env.d.ts"]
  // FIX 2: Removed the "references" section entirely to resolve TS6053
}
